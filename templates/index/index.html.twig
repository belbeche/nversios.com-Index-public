{% extends 'base.html.twig' %}

{% block title %}Accueil - ASI{% endblock %}

{% block body %}

<div class="jumbotron text-center">
    PortFolio Walid BELBECHE <br>
    <a href="#">Télécharger le CV</a>
</div>

<div class="container">
    <h2>Les dernières annonces</h2>
    <div class="row flex">
        {% for annonce in annonces %}
            <div class="col-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="#">{{ annonce.titre }}</a>
                        </h5>
                        <p class="card-text">
                            {{ annonce.contenu }}
                        </p>
                        <div class="text-primary">
                            <a href="{{ path('annonces.index', {id: annonce.id, slug:annonce.slug})}}" class="btn btn-primary">Voir l'annonce</a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

{% endblock %}
